{% extends 'layout.njk' %}

{% import 'parts/card.njk' as card %}

{% block content %}

{% call card.render('Meus An√∫ncios', 'user-ads container') %}
  <div class="items">
    {% for product in products %}
      <div class="item">
        <div class="image" style="background-image: url({{ product.img }});"></div>
        <div class="info">
          <div class="title">{{product.name}}</div>
          <div class="price">{{product.formatted_price}}</div>
          <div class="published">Publicado em {{product.formatted_created_at}}</div>
          <div class="actions">
            <a href="/products/{{product.id}}/edit">Editar</a>
            <a href="/products/{{product.id}}">Ver</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endcall %}

{% endblock %}

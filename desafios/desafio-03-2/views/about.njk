{% extends "layout.njk" %}

{% block head %}
  <title>Rocketseat - Sobre</title>
{% endblock %}

{% block content %}
  <div id="wrapper">
    <img src="{{about.avatar_url}}" alt="Logo da Rocketseat">
    <h1>{{about.name}}</h1>
    <h2>{{about.description}}</h2>
    <ul>
      {% for tech in about.techs %}
        <li>{{tech}}</li>
      {% endfor %}
    </ul>
  </div>
  <div id="links-footer" class="links">
    {% for link in about.links %}
      <a class="{{link.class}}" href="{{link.url}}" target="_blank">{{link.name}}</a>
    {% endfor %}
  </div>
{% endblock %}

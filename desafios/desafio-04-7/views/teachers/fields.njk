<div class="inputs">
  <div class="item">
    <div>Avatar URL</div>
    <div>
      <input
        type="url"
        name="avatar_url"
        placeholder="http://"
        value="{{ teacher.avatar_url }}"
      >
    </div>
  </div>
  <div class="item">
    <div>Nome completo</div>
    <div>
      <input
        type="text"
        name="name"
        placeholder="Nome do professor"
        value="{{ teacher.name }}"
      >
    </div>
  </div>
  <div class="item">
    <div>Data de nascimento</div>
    <div>
      <input
        type="date"
        name="birth"
        value="{{ teacher.birth }}"
      >
    </div>
  </div>
  <div class="item">
    <div>Grau de escolaridade</div>
    <div>
      <select name="graduation">
        <option value="medio" {% if teacher.graduation == 'medio' %} selected {% endif %}>Ensino Médio Completo</option>
        <option value="superior" {% if teacher.graduation == 'superior' %} selected {% endif %}>Ensino Superior Completo</option>
        <option value="mestrado" {% if teacher.graduation == 'mestrado' %} selected {% endif %}>Mestrado</option>
        <option value="doutorado" {% if teacher.graduation == 'doutorado' %} selected {% endif %}>Doutorado</option>
      </select>
    </div>
  </div>
  <div class="item">
    <div>Tipo de aula</div>
    <div>
      <span>
        <input
          type="radio"
          name="typeClass"
          value="P"
          {% if teacher.typeClass == 'P' %}
            checked
          {% endif %}
        >
          Presencial
        </span>
      <span>
        <input
          type="radio"
          name="typeClass"
          value="D"
          {% if teacher.typeClass == 'D' %}
            checked
          {% endif %}
        >
          À distância
        </span>
    </div>
  </div>
  <div class="item">
    <div>Área de atuação</div>
    <div>
      <input
        type="text"
        name="teaches"
        placeholder="Separe as matérias que o professor pode lecionar por vírgula"
        value="{{ teacher.teaches }}"
      >
    </div>
  </div>
</div>
<button id="btn-save" type="submit">Salvar</button>

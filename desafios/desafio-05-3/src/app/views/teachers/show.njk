{% extends 'layout.njk' %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover;"></section>
    <section class="details">
      <h3>Detalhes</h3>
      <div class="inputs">
        <div class="item">
          <div>Nome completo</div>
          <div>{{ teacher.name }}</div>
        </div>
        <div class="item">
          <div>Idade</div>
          <div>{{ teacher.birth_date }}</div>
        </div>
        <div class="item">
          <div>Grau de escolaridade</div>
          <div>{{ teacher.education_level }}</div>
        </div>
        <div class="item">
          <div>Tipo de aula</div>
          <div>
            {% if teacher.class_type == 'P' %}
              Presencial
            {% endif %}
            {% if teacher.class_type == 'D' %}
              À distância
            {% endif %}
            </div>
        </div>
        <div class="item">
          <div>Acompanhamento</div>
          <div>
            {% for subject_taught in teacher.subjects_taught %}
              <span>{{ subject_taught }}</span>
            {% endfor %}
          </div>
        </div>
        <div class="item">
          <div>Desde</div>
          <div>{{ teacher.created_at }}</div>
        </div>
        <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>
      </div>
    </section>
  </div>
{% endblock %}

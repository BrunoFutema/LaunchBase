<div class="inputs">
  <div class="item">
    <div>Avatar URL</div>
    <div>
      <input
        type="url"
        name="avatar_url"
        placeholder="http://"
        value="{{ student.avatar_url }}"
      >
    </div>
  </div>
  <div class="item">
    <div>Nome completo</div>
    <div>
      <input
        type="text"
        name="name"
        placeholder="Nome do aluno"
        value="{{ student.name }}"
      >
    </div>
  </div>
  <div class="item">
    <div>E-mail</div>
    <div>
      <input
        type="email"
        name="email"
        value="{{ student.email }}"
      >
    </div>
  </div>
  <div class="item">
    <div>Data de nascimento</div>
    <div>
      <input
        type="date"
        name="birth"
        value="{{ student.birth }}"
      >
    </div>
  </div>
  <div class="item">
    <div>Ano escolar</div>
    <div>
      <select name="school_year">
        <option value="5EF" {% if student.schoolYear == '5EF' %} selected {% endif %}>
          5º ano do ensino fundamental
        </option>
        <option value="6EF" {% if student.schoolYear == '6EF' %} selected {% endif %}>
          6º ano do ensino fundamental
        </option>
        <option value="7EF" {% if student.schoolYear == '7EF' %} selected {% endif %}>
          7º ano do ensino fundamental
        </option>
        <option value="8EF" {% if student.schoolYear == '8EF' %} selected {% endif %}>
          8º ano do ensino fundamental
        </option>
        <option value="9EF" {% if student.schoolYear == '9EF' %} selected {% endif %}>
          9º ano do ensino fundamental
        </option>
        <option value="1EM" {% if student.schoolYear == '1EM' %} selected {% endif %}>
          1º Ano do Ensino Médio
        </option>
        <option value="2EM" {% if student.schoolYear == '2EM' %} selected {% endif %}>
          2º Ano do Ensino Médio
        </option>
        <option value="3EM" {% if student.schoolYear == '3EM' %} selected {% endif %}>
          3º Ano do Ensino Médio
        </option>
      </select>
    </div>
  </div>
  <div class="item">
    <div>Carga horária semanal</div>
    <div>
      <input
        type="number"
        name="workload"
        value="{{ student.workload }}"
      >
    </div>
  </div>
  <div class="item">
    <div>Professor</div>
    <div>
      <select name="teacher">
        {% for teacher in teachers %}
          <option value="{{ teacher.id }}" {% if student.teacher_id == teacher.id %} selected {% endif %}>
            {{ teacher.name }}
          </option>
        {% endfor %}
      </select>
    </div>
  </div>
</div>
<button id="btn-save" type="submit">Salvar</button>

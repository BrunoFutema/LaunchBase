{% extends "layout.njk" %}

{% block head %}
  <title>{{video.title}}</title>
{% endblock %}

{% block content %}
  <div id="wrapper" class="video">
    <h1>{{video.title}}</h1>
  </div>
  <section class="video">

    <div class="card" id="{{video.id}}">
      <div class="card__video-container">
        <iframe src="http://www.youtube.com/embed/{{video.id}}" frameborder="0"></iframe>
      </div>
      <div class="card__content">
        <p>{{video.title}}</p>
      </div>
      <div class="card__info">
        <p>{{video.duration}}</p>
        <p class="card__price">{{video.price}}</p>
      </div>
    </div>

  </section>

{% endblock %}
{% extends "layout.njk" %}

{% block head %}
  <title>Bruno Futema - Portf√≥lio</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
  <div id="wrapper">
    <h1>Aulas</h1>
  </div>
  <section class="cards">

    {% for video in videos %}
      <div class="card" id="{{video.id}}">
        <div class="card__image-container {{ 'featured-wrapper' if video.featured }}">
          <img src="https://img.youtube.com/vi/{{video.id}}/maxresdefault.jpg" alt="Imagem de {{video.title}}">
          {% if video.featured %}
            <div class="featured">Featured</div>
          {% endif %}
        </div>
        <div class="card__content">
          <p>{{video.title}}</p>
        </div>
        <div class="card__info">
          <p>{{video.duration}}</p>
          <p class="card__price">{{video.price}}</p>
        </div>
      </div>
    {% endfor %}

  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>
      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <script src="./scripts.js"></script>
{% endblock %}
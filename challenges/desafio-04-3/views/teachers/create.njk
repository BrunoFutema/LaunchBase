{% extends 'layout.njk' %}

{% block content %}
  <form class="card" method="POST" action="/teachers">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/10090394/700x1000) no-repeat center center / cover;"></section>
    <section class="details">
      <h3>Novo Professor</h3>
      <div class="inputs">
        <div class="item">
          <div>Avatar URL</div>
          <div>
            <input
              type="url"
              name="avatar_url"
              placeholder="http://"
            >
          </div>
        </div>
        <div class="item">
          <div>Nome completo</div>
          <div>
            <input
              type="text"
              name="name"
              placeholder="Nome do professor"
            >
          </div>
        </div>
        <div class="item">
          <div>Data de nascimento</div>
          <div>
            <input
              type="date"
              name="birth"
            >
          </div>
        </div>
        <div class="item">
          <div>Grau de escolaridade</div>
          <div>
            <select
              name="educationalLevel"
            >
              <option value="Ensino Médio Completo">Ensino Médio Completo</option>
              <option value="Ensino Superior Completo">Ensino Superior Completo</option>
              <option value="Mestrado">Mestrado</option>
              <option value="Doutorado">Doutorado</option>
            </select>
          </div>
        </div>
        <div class="item">
          <div>Tipo de aula</div>
          <div>
            <span><input type="radio" name="typeClass" value="Presencial" checked>Presencial</span>
            <span><input type="radio" name="typeClass" value="À distância">À distância</span>
          </div>
        </div>
        <div class="item">
          <div>Área de atuação</div>
          <div>
            <input
              type="text"
              name="occupationArea"
              placeholder="Separe as matérias que o professor pode lecionar por vírgula"
            >
          </div>
        </div>
      </div>
      <button type="submit">Salvar</button>
    </section>
  </form>
{% endblock %}

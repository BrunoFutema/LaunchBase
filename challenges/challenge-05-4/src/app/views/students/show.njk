{% extends 'layout.njk' %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center center / cover;"></section>
    <section class="details">
      <h3>Detalhes</h3>
      <div class="inputs">
        <div class="item">
          <div>Nome completo</div>
          <div>{{ student.name }}</div>
        </div>
        <div class="item">
          <div>E-mail</div>
          <div>{{ student.email }}</div>
        </div>
        <div class="item">
          <div>Aniversário</div>
          <div>{{ student.birth }}</div>
        </div>
        <div class="item">
          <div>Ano escolar</div>
          <div>{{ student.school_year }}</div>
        </div>
        <div class="item">
          <div>Carga horária Semanal</div>
          <div>{{ student.workload }} horas</div>
        </div>
        <div class="item">
          <div>Professor</div>
          <div>{{ student.teacher_name }}</div>
        </div>
        <a href="/students/{{ student.id }}/edit" class="button">Editar</a>
      </div>
    </section>
  </div>
{% endblock %}
